<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings"
    android:background="@color/colorBackgroundDark">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/back"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:id="@+id/back"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/musica"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="50dp"
        android:text="Efectos"
        android:textSize="50dp"
        android:textColor="@color/colorTitles"
        android:id="@+id/efectos"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Música"
        android:textSize="50dp"
        android:layout_centerVertical="true"
        android:id="@+id/musica"
        android:layout_marginLeft="100dp"
        android:textColor="@color/colorTitles"
        android:paddingBottom="100dp"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/efectos"
        android:layout_alignRight="@+id/efectos"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="-50dp"
        android:textSize="50dp"
        android:scaleX="2"
        android:scaleY="2"
        android:id="@+id/checkEfectos"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/musica"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="0dp"
        android:textSize="50dp"
        android:scaleX="2"
        android:scaleY="2"
        android:layout_alignRight="@+id/checkEfectos"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Créditos"
        android:layout_below="@+id/musica"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:layout_marginTop="-40dp"
        android:id="@+id/creditos"
        android:layout_centerInParent="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ayuda"
        android:layout_below="@+id/creditos"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:layout_marginTop="40dp"
        android:id="@+id/ayuda"
        android:layout_alignRight="@+id/creditos"
        android:layout_alignLeft="@+id/creditos"
        />


</RelativeLayout>